{
  "manifest_version": 3,
  "name": "Subito.it Annunci Remover",
  "version": "1.3",
  "description": "Nasconde gli annunci indesiderati su Subito.it",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.subito.it/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
